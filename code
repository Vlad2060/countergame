<body>
    <h1>Лічильник</h1>
    <p>Значення: <span id="counter">0</span></p>
    <button onclick="збільшитиЛічильник()"></button>
    <script>
        var лічильник = 0;

        function збільшитиЛічильник() {
            лічильник++;
            document.getElementById("counter").textContent = лічильник;
        }
    </script>
