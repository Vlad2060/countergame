<body>
    <h1>Лічильник</h1>
    <p>Значення: <span id="counter">0</span></p>
    <button class="red" onclick="bigger()"></button>
    <button onclick="buyCofee()">Buy coffe</button>
    <script>
        let cout = 0;
        let i = 1;

        let coffe = false;

        function bigger() {
            cout += i;
            document.getElementById("counter").textContent = cout;
        }

        function buyCofee() {
            if (coffe === false) {
                cout -= 10;
                coffe = true;
                i = 3;
                document.getElementById("counter").textContent = cout;
            } else {
                alert("Not enouth!");
            }
        }
    </script>
